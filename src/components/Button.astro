---
// Henter parametrene fra Astro.props
const { variant = "primary", size = "" } = Astro.props;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige varianter
const variantClasses = {
  primary: "btn btn-primary btn-sm md:btn-md lg:btn-lg xl:btn-xl hover:text-neutral-content hover:bg-base-content hover:border-base-content text-[12px] md:text-[13px] lg:text-[16px] whitespace-nowrap ",
  secondary: "btn btn-secondary btn-outline btn-sm md:btn-md lg:btn-lg xl:btn-xl hover:text-base-content hover:bg-base-100 text-[12px] md:text-[13px] lg:text-[16px]  whitespace-nowrap ",
};

const sizeClasses = {
  wide: "btn-wide",
};
---

<!--Sæt classes for den pågældende knap sammen ved hjælp af Astros class:list -->{
  variant === "secondary" ? (
    <button class:list={[variantClasses[variant], sizeClasses[size]]} x-data="{ clicked: false }" x-on:click="clicked = !clicked" x-bind:class="clicked ? '!bg-secondary !border-secondary !text-neutral-content' : ''">
      <slot />
    </button>
  ) : (
    <button class:list={[variantClasses[variant], sizeClasses[size]]}>
      <slot />
    </button>
  )
}
