---
// Henter parametrene fra Astro.props
const { variant = "secondary", size = "" } = Astro.props;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige varianter
const variantClasses = {
  primary:
    "btn btn-primary btn-sm md:btn-md lg:btn-lg xl:btn-xl hover:text-neutral-content hover:bg-base-content hover:border-base-content text-[12px] md:text-[13px] lg:text-[16px] ",
  secondary:
    "btn btn-secondary btn-outline btn-sm md:btn-md lg:btn-lg xl:btn-xl hover:text-base-content hover:bg-base-100 text-[12px] md:text-[13px] lg:text-[16px]",
};

const sizeClasses = {
  wide: "btn-wide",
};
---

<button
  @click="show()"
  class:list={[variantClasses[variant], sizeClasses[size]]}
>
  <slot />
</button>
