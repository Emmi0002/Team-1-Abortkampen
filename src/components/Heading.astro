---
// Henter parametrene fra Astro.props
const { htmlheading = "h2", size = "medium", weight = "heavy", stylingclasses = "", color = "negative" } = Astro.props;
const Htmlheading = htmlheading;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  large: "text-[28px] md:text-[33px] lg:text-[90px] uppercase",
  medium: "text-[23px] md:text-[27px] lg:text-[40px] uppercase",
  small: "text-[20px] md:text-[23px] lg:text-[31px] uppercase",
  xsmall: "text-[18px] md:text-[19px] lg:text-[25px]",
};

const typeClasses = {
  bold: "font-bold font-['AvenirNextBold']",
  heavy: "font-ekstrabold font-['AvenirNextHeavy']",
};

const colorClasses = {
  label: "text-secondary",
  body: "text-base-content",
  negative: "text-neutral-content",
};
---

<Htmlheading class:list={[stylingclasses, sizeClasses[size], colorClasses[color], typeClasses[weight]]}><slot /></Htmlheading>
