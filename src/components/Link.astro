---
// Henter parametrene fra Astro.props
const {
  href = "#",
  target = "_self",
  variant = "textlink",
  size = "small",
  color = "negative",
  weight = "regular",
} = Astro.props;

//Definer den styling (Tailwind classes, der gør sig gældende for alle links
const linkStyling = "";

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige varianter
const variantClasses = {
  textlink:
    "underline text-base-content font-bold hover:text-secondary transition-colors duration-300 ",

  footerlink:
    "flex items-center gap-2 hover:text-secondary transition-colors duration-300",

  linkbutton:
    "btn btn-secondary btn-outline btn border-1 border-secondary bg-base-100 text-secondary font-bold hover:text-base-content transition-all duration-300 btn-sm md:btn-md lg:btn-lg xl:btn-xl ",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskelligeog størrelser.
const sizeClasses = {
  small: "text-xs sm:text-sm md:text-base ",
  medium: "text-base sm:text-lg md:text-xl ",
  large: "text-xl sm:text-2xl md:text-3xl ",
};

const colorClasses = {
  negative: "text-neutral-content",
  body: "text-base-content",
};

const weightClasses = {
  regular: "font-normal",
  bold: "font-bold",
};
---

<!--Sæt classes for den pågældende knap sammen ved hjælp af Astros class:list -->
<a
  href={href}
  target={target}
  class:list={[
    linkStyling,
    variantClasses[variant],
    sizeClasses[size],
    colorClasses[color],
    weightClasses[weight],
  ]}><slot /></a
>
