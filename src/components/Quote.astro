---
import Heading from "./Heading.astro";
import Text from "./Text.astro";

const { title = "", body = "", author = "" } = Astro.props;
---

<section
  class="mx-auto max-w-md md:max-w-2xl px-[var(--margin-h-sektioner-small)] md:px-[var(--margin-h-sektioner-large)]"
>
  <!-- QUOTE -->
  <div class="float-left mb-2 mr-6 max-w-[14rem] md:max-w-sm">
    <Heading
      htmlheading="h3"
      size="small"
      weight="heavy"
      color="label"
      stylingclasses="tracking-tight leading-tight"
    >
      “{title}”
    </Heading>
  </div>

  <!-- BODY TEXT -->
  <div>
    <Text teksttype="body" weight="regular" color="body">
      {body}
    </Text>
  </div>

  <!-- AUTHOR -->
  <div class="text-right clear-both">
    <Text teksttype="body" weight="bold" color="label">
      {author}
    </Text>
  </div>
</section>
