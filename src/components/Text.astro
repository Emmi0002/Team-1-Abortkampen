---
// Henter parametrene fra Astro.props
const {
  teksttype = "",
  stylingclasses = "",
  weight = "regular",
  color = "body",
} = Astro.props;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  headline: "text-[13px] md:text-[16px] lg:text-[20px]",
  body: "text-[12px] md:text-[13px] lg:text-[16px]",
  subtitle: "text-[11px] md:text-[11px] lg:text-[14px]",
  caption: "text-[24px] md:text-[35px] lg:text-[70px]",
  footnote: "text-[12px] md:text-[12px] lg:text-[12px] uppercase",
};

// Tailwind font-weight / Roboto
const typeClasses = {
  light: "font-light font-RobotoLight",
  regular: "font-normal font-RobotoRegular",
  bold: "font-bold font-RobotoBold",
  heavyavenir: "font-heavy font-AvenirNextHeavy",
};

const colorClasses = {
  label: "text-secondary",
  body: "text-base-content",
  negative: "text-neutral-content",
};
---

<p
  class:list={[
    sizeClasses[teksttype],
    typeClasses[weight],
    colorClasses[color],
    stylingclasses,
  ]}
>
  <slot />
</p>
